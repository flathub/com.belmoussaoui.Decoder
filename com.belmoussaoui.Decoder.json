{
    "id": "com.belmoussaoui.Decoder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "decoder",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "decoder",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/decoder/-/releases/0.8.0/downloads/decoder-0.8.0.tar.xz",
                    "sha256": "fd0cb11041d4d6637aa9a8a782c7ad58e740b68f86bd0e92d5aaff57b9071147",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/13930/releases/",
                        "version-query": ".[0].tag_name",
                        "url-query": ".[0].assets.links.[] | select(.name == \"decoder-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
